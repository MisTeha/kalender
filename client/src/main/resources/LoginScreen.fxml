<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" spacing="10"
    alignment="CENTER" style="-fx-padding: 40;"
    fx:controller="oop.tegevusteplaneerija.client.LoginController">
    <Label text="Login or Register" style="-fx-font-size: 18; -fx-font-weight: bold;" />
    <TextField fx:id="usernameField" promptText="Enter username" maxWidth="200" />
    <HBox spacing="10" alignment="CENTER">
        <Button text="Login" fx:id="loginButton" />
        <Button text="Register" fx:id="registerButton" />
    </HBox>
    <Label fx:id="errorLabel" textFill="red" />
</VBox>